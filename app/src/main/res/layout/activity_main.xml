<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:clickable="true"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CDC9C9">
            <LinearLayout
                android:id="@+id/newThread_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <example.com.component.DrawView
                    android:id="@+id/newThread_imageView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:fillViewport="true">
                </example.com.component.DrawView>
                <LinearLayout
                    android:id="@+id/newThread_linearlayout_gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/newThread_view1"
                        android:layout_width="320dp"
                        android:layout_height="1px"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="#000000">
                    </View>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:text="进程创建"/>
                    <View
                        android:id="@+id/newThread_view2"
                        android:layout_width="320dp"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="#000000">
                    </View>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF">
                        <TextView
                            android:id="@+id/newThread_linearlayout1_textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:text="进程名："/>
                        <EditText
                            android:id="@+id/newThread_linearlayout1_edittext2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/newThread_linearlayout1_textview2"
                            android:layout_centerHorizontal="true"
                            android:hint="请输入名称"
                            android:textSize="16sp"
                            android:background="@drawable/mywallet_edittext_border" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF">
                        <TextView
                            android:id="@+id/newThread_linearlayout1_textview3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:text="进程类型："/>

                        <Spinner
                            android:id="@+id/newThread_linearlayout1_spinner"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/newThread_linearlayout1_textview3"
                            android:layout_marginLeft="30dp"
                            android:layout_centerHorizontal="true">
                        </Spinner>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF">
                        <TextView
                            android:id="@+id/newThread_linearlayout1_textview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:text="运行时长："/>
                        <EditText
                            android:id="@+id/newThread_linearlayout1_edittext4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请输入时间({s;s∈[1,15]})"
                            android:textSize="16sp"
                            android:background="@drawable/mywallet_edittext_border"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/newThread_linearlayout1_textview4"
                            android:layout_toEndOf="@+id/newThread_linearlayout1_textview4"
                            android:layout_marginLeft="30dp"
                            android:layout_marginStart="30dp" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/newThread_linearlayout1_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/mywallet_round_button2"
                        android:text="确定"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/newThread_linearlayout2_gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:id="@+id/newThread2_view1"
                        android:layout_width="320dp"
                        android:layout_height="1px"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="#000000">
                    </View>

                    <TextView
                        android:id="@+id/time_turn_scheduling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center_horizontal"
                        android:textSize="16sp"
                        android:text="时间片轮转调度"/>
                    <View
                        android:id="@+id/newThread2_view2"
                        android:layout_width="320dp"
                        android:layout_height="1px"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:background="#000000">
                    </View>
                    <RelativeLayout
                        android:id="@+id/os_relative"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mywallet_white">
                        <TextView
                            android:id="@+id/os_relative_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:textSize="16sp"
                            android:text="name"/>
                        <TextView
                            android:id="@+id/os_relative_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/os_relative_text1"
                            android:layout_marginLeft="38dp"
                            android:textSize="16sp"
                            android:text="status"/>
                        <TextView
                            android:id="@+id/os_relative_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/os_relative_text2"
                            android:layout_marginLeft="38dp"
                            android:textSize="16sp"
                            android:text="pri"/>
                        <TextView
                            android:id="@+id/os_relative_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/os_relative_text3"
                            android:layout_marginLeft="38dp"
                            android:textSize="16sp"
                            android:text="time"/>
                        <TextView
                            android:id="@+id/os_relative_text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/os_relative_text4"
                            android:layout_marginLeft="38dp"
                            android:textSize="16sp"
                            android:text="next"/>
                        </RelativeLayout>
                    <ListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    </ListView>
                </LinearLayout>
            </LinearLayout>
    </FrameLayout>
    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:layout_weight="1"
        android:name="example.com.operationgsystems.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>